<div class="tweets-sell-contents">
<%= link_to image_tag("pfvideo-logo.png",size: '185x50'), "/" %>
  <header class="tweets-sell-header">
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="tweets-sell-main">
    <h2 class="tweets-sell-title">投稿の情報を入力</h2>
    <%= form_with(model: @tweet, local: true) do |f| %>

    <%# 出品画像 %>
      <div class="weight-bold-text">
        動画のタイトル
        <span class="indispensable">必須</span>
      </div>
        <%= f.text_area :title, class:"tweets-title" %>
        <%# 商品名と商品説明 %>
    <div class="new-tweets">
      <div class="weight-bold-text">
        YouTube Url
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :youtube_url, class:"tweets-title", id:"tweet-name", maxlength:"40" %>
      <div class="tweets-explain">
        <div class="weight-bold-text">
          投稿の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"tweets-text", id:"tweett-info" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>
    
        <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "Tweet", class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
    <% end %>
  </div>  
</div>

<%= render "shared/footer" %>